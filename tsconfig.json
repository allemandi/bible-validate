{
    "include": [
        "src/**/*"
    ],
    "compilerOptions": {
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "checkJs": true,
        "declaration": true,
        "declarationMap": true,
        "emitDeclarationOnly": true,
        "noEmitOnError": true,
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "Node",
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true
    },
    
}